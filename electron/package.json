{
  "name": "ipam-tool-electron",
  "version": "1.0.0",
  "description": "IPAM Tool - IP Address Management Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "npm run build-backend && npm run build-frontend && electron-builder"
  },
  "build": {
    "appId": "com.ipam-tool.desktop",
    "productName": "IPAM Tool",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "frontend/**/*",
      "backend/ipam-backend*",
      "!backend/node_modules",
      "!backend/build",
      "!backend/dist",
      "!backend/__pycache__",
      "!backend/.env*"
    ],
    "extraResources": [
      {
        "from": "../backend/dist/",
        "to": "backend/",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {}
}
